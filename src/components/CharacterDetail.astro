---
// src/components/CharacterDetails.astro
import type { Character } from "../types/interfaces.ts";

interface Props {
  character: Character;
}

const { character }: Props = Astro.props;
---

<div class="character-card">
  {character.playable && <div class="character-banner">PLAYABLE CHARACTER</div>}
  <img
    src={`/public/img/characters/${character.name.toLowerCase()}.png`}
    alt={character.name}
    class="character-image"
  />
  <div class="details-container">
    <h3 class="text-xl font-bold">{character.name}</h3>
    <p class="italic">{character.class}</p>
    <p>{character.description}</p>
    <ul>
      <li><strong>Weapon:</strong> {character.weapon}</li>
      <li><strong>Ability:</strong> {character.ability}</li>
    </ul>
  </div>
</div>

<style>
  .character-card {
    background-color: #f5f5dc; /* Beige background color */
    border: 2px solid #ccc;
    padding: 20px;
    max-width: 300px;
    margin: auto;
    font-family: "Georgia", serif;
    position: relative;
    border-radius: 10px; /* Add some border radius for a softer look */
  }

  .character-banner {
    content: "";
    position: absolute;
    top: 10px;
    left: 0;
    right: 0;
    height: 20px;
    background-color: rgba(0, 0, 0, 0.1); /* Semi-transparent background */
    text-align: center;
    line-height: 20px;
    color: #333; /* Darker text color for contrast */
  }

  .character-image {
    width: 100%;
    height: auto;
    display: block;
    margin-bottom: 10px;
  }

  .details-container {
    text-align: left;
  }
</style>
