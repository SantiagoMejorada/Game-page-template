<div class="flex w-full max-h-400 overflow-hidden">
  <!-- Lado izquierdo para tag playable e imagen -->
  <div class="w-1/2 relative bg-beige p-8 flex justify-end items-center">
    <!-- Imagen translúcida -->
    <img src={`/public/img/characters/${character.name.toLowerCase()}.png`} alt={character.name} class="absolute inset-0 w-full h-full object-cover object-top opacity-20" />
    <!-- Imagen principal -->
    <img src={`/public/img/characters/${character.name.toLowerCase()}.png`} alt={character.name} class="w-3/4 max-h-full object-contain z-10" />
    {character.playable && (
      <div class="absolute top-2 left-0 right-0 text-center py-1 mb-4 bg-black bg-opacity-50 text-white">
        PLAYABLE CHARACTER
      </div>
    )}
  </div>

  <!-- Lado derecho para información del personaje -->
  <div class="w-1/2 bg-beige p-8 overflow-auto">
    <h1 class="text-4xl font-bold mb-4">{character.name}</h1>
    <h2 class="text-2xl mb-2">{character.class}</h2>
    <p class="mb-4">{character.description}</p>
    <ul>
      <li><strong>Weapon:</strong> {character.weapon}</li>
      <li><strong>Favorite Food:</strong> {character.ability}</li>
    </ul>
  </div>
</div>

<style>
  .max-h-400 {
    max-height: 600px;
  }
  .bg-beige {
    background-color: #f5f5dc;
  }
  .bg-darker-beige {
    background-color: #e4e2d7; /* Un beige más oscuro para la tabla de info */
  }
</style>
